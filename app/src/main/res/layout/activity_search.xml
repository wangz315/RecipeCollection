<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".presentation.SearchActivity">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/messageName"
            android:hint="Name"
            android:layout_below="@+id/instruction"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="58dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/messageTime"
            android:hint="Max Time Cost (in minutes)"
            android:layout_below="@+id/messageName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/searchRecipe"
            android:layout_width="210dp"
            android:layout_height="75dp"
            android:text="Search"
            android:onClick="onClickSearch"
            android:layout_marginTop="43dp"
            android:textSize="20dp"
            android:layout_below="@+id/messageAttr"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/messageAttr"
            android:layout_alignEnd="@+id/messageAttr" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/messageIng"
            android:hint="Ingredients"
            android:layout_below="@+id/messageTime"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/messageAttr"
            android:hint="Attributes"
            android:layout_below="@+id/messageIng"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instruction: If you want to search more than one ingredients or attributes, split them by , . if you do not want to search some properties, leave them blank."
            android:id="@+id/instruction"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


</RelativeLayout>
