            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.SearchActivity"
            android:label="Search Recipe" >
        </activity>
        <activity
            android:name=".presentation.ViewRecipeActivity"
            android:label="Recipe List" >
        </activity>
        <activity
            android:name=".presentation.DetailPageActivity"
            android:label="Recipe Detail" >
        </activity>
        <activity android:name=".presentation.CreateStepActivity"></activity>
        <activity android:name=".presentation.CreateIngreActivity"></activity>
        <activity android:name=".presentation.CreateBasicActivity"></activity>
        <activity android:name=".presentation.CommentActivity"></activity>
        <activity android:name=".presentation.EditBasicActivity"></activity>
